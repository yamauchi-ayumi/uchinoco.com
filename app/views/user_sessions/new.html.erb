<div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8">
  <div class="text-xl font-bold text-center">
    <h1><%= t('.title') %></h>
  </div>
  <div class="mx-auto mt-8 mb-0 max-w-md space-y-4">
    <%= form_with url: login_path do |f| %>
      <div class="mb-3">
        <%= f.label :email %>
        <%= f.email_field :email, class: "w-full rounded-lg border border-gray-300 p-4 text-sm shadow-sm focus:border-black focus:ring-black" %>
      </div>
      <div class="mb-3">
        <%= f.label :password %>
        <%= f.password_field :password, class: "w-full rounded-lg border border-gray-300 p-4 text-sm shadow-sm focus:border-black focus:ring-black" %>
      </div>
      <div class="mt-[30px] flex flex-col items-center justify-between">
        <button class="inline-block rounded-full border border-black bg-white px-5 py-3 text-sm font-medium text-black hover:bg-black hover:text-white">
          <%= f.submit t('.login') %>
        </button>
      </div>
    <% end %>
      <div class="flex flex-col items-center justify-between hover:text-gray-500">
        <p>パスワードをお忘れの方はこちら</p>
      </div>
      <div class="flex-col flex items-center pt-5 border-dotted border-t-4 border-gray">
        <button class="inline-block rounded-full border border-black bg-teal-500 px-5 py-3 text-sm font-medium text-black hover:bg-teal-700 hover:text-white">
          <%= link_to t('.to_register_page'), new_user_path %>
        </button>
      </div>
  </div>
</div>