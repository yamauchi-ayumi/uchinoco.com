<div class="flex">
  <div id="post-id-<%= post.id %>">
    <div class="max-w-md w-full mb-3 p-2 bg-white border border-black rounded-xl dark:bg-gray-800 dark:border-gray-700">
      <%= link_to "#" do %>
        <%= image_tag post.post_image_url, class: "w-full h-60 object-cover rounded-lg" %>
      <% end %>
      <div class="pt-5">
        <div class="relative">
          <div class="py-3 px-1 text-sm"><%= post.body %></div>
          <%= link_to "user_path(post.user)", class: "flex items-center gap-2" do %>
            <%= image_tag "image.png", class: "rounded-full w-10 h-10" %>
            <div class="text-xs font-semibold text-gray-500"><%= post.user.name %></div>
          <% end %>
          <div class="text-xs text-right font-xtralight"><%= l post.created_at, format: :long %></div>
        </div>
      </div>
    </div>
  </div>
</div>